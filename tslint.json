{
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-implicit-dependencies": false,
    "no-shadowed-variable": false,
    "prefer-conditional-expression": false,
    "variable-name": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  },
  "extends": ["tslint:latest", "tslint-config-prettier"]
}
