{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2019",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
